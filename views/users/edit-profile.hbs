<h1>Welcome, {{theUser.username}}!</h1>

<h3>Ready to update your profile? Begin!</h3>

<form action="/users/{{theUser._id}}/update" method="POST">

  <label for="">Avatar:</label>
  <input type="text" name="avatar" value="{{theUser.avatar}}">
  <br><br>

  <label for="">First Name:</label>
  <input type="text" name="firstName" value="{{theUser.firstName}}">
  <br><br>

  <label for="">Last Name:</label>
  <input type="text" name="lastName" value="{{theUser.lastName}}">
  <br><br>
  

  <label for="bioEdit">Bio:</label>
  <textarea id="bioEdit" rows="4" cols = '50' name="bio">{{theUser.bio}}</textarea>

  <br><br>

  <label for="">My Reviews:</label>
  <input type="text" name="reviews" value="{{theUser.reviews}}">

  {{!-- <select name="review">

   {{#each allTheReviews}}
    <option value="{{this._id}}">{{this.name}}</option>
   {{/each}}
  </select> --}}
  <br><br>

  <label for="">My Comments:</label>
  <input type="text" name="comments" value="{{theUser.comments}}">
  <br><br>

  <button type="submit">Save Changes</button>


</form>